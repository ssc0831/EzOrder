package com.day11;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.PrintStream;
import java.util.Scanner;

public class ScannerLine {
	// com.day10.Member.java 파일을 읽어서 output2.txt로 내보내시오.
	// 1 : package com.day10; ... 형식으로 출력
	// Scanner, PrintStream 사용하기
	public static void main(String[] args) {
		int cnt = 1;
		try {
			Scanner sc = new Scanner(new File("src\\com\\day10\\Member.java"));

		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		PrintStream ps;
		try {
			ps = new PrintStream("output3.txt");
			while (sc.hasNext()) {
				System.out.println(cnt++ +" : " + sc.nextLine());	
			}
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}

	}
}
